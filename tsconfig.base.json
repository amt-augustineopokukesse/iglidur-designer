{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@iglidur-designer/header": [
        "apps/iglidur-designer/src/app/libs/header/src/index.ts"
      ],
      "@iglidur-designer/interfaces": [
        "apps/iglidur-designer/src/app/libs/interfaces/src/index.ts"
      ],
      "@iglidur-designer/services": [
        "apps/iglidur-designer/src/app/libs/services/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
